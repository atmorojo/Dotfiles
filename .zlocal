source $HOME/.dotfiles/aliases                  # Aliases
bindkey -v                                      # Vim-mode zsh
stty -ixon                                      # Fix ctrl-s problem
SAL_USE_VCLPLUGIN=gtk                           # LibreOffice engine
export GEM_HOME=$(ruby -e 'print Gem.user_dir') # Set GEM_HOME for bundler
export ANDROID_HOME=/opt/android-sdk            # Android SDK

# Prompt {
PROMPT="[%{$fg_no_bold[yellow]%}%?%{$reset_color%}]"
RPROMPT="%{$fg[red]%}%n%{$reset_color%}@%{$fg[blue]%}%m %{$fg_no_bold[yellow]%}%1~ %{$reset_color%}%#"
# }

# Add PATHs {
GENYMOTION="${HOME}/build/genymotion/"
RUBY="$(ruby -e 'print Gem.user_dir')/bin"
COMPOSER="${HOME}/.composer/vendor/bin"
NPM="${HOME}/.npm"

PATH="$GENYMOTION:$RUBY:$COMPOSER:$NPM/bin:$PATH"
# }

# Add ManPath {
## Unset manpath so we can inherit from /etc/manpath via the `manpath` command
unset MANPATH # delete if you already modified MANPATH elsewhere in your config
export MANPATH="$NPM_PACKAGES/share/man:$(manpath)"
# }

# Run tmux {
if [[ $TERM != "linux" ]]; then
    if [[ -z $TMUX ]]; then
        tmux attach
    fi
fi
# }

# Fancy Zsh
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
